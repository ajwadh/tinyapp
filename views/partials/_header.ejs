<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a style="width:90px;margin-top:7px;" class="nav-item nav-link" href="/urls">My URLs</a>
        <a style="width:150px;margin-top:7px;" class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <div style='display:flex;justify-content:flex-end;width:63vw;'>
          <% if (typeof user==="undefined" ) { %>
            <a class="nav-item nav-link" href="/login">Login</a>
            <a class="nav-item nav-link" href="/register">Create New Account</a>
            <% } else {%>
              <form class="form-inline float-right" method="POST" action="/logout">
                <div>Logged In As: <%= user.email %>
                </div>
                <input class="btn btn-outline-dark ml-3 my-sm-0" type="submit" value="Logout">
              </form>
        </div>
        <% } %>
      </div>
    </div>
  </nav>
</header>